<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DesignSystem.Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_gradient_button</item>
    </style>

    <style name="DesignSystem.Button.White" parent="DesignSystem.Button.Default">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="DesignSystem.Button.Text" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="DesignSystem.Text.Default" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DesignSystem.Text.H2" parent="DesignSystem.Text.Default">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DesignSystem.Text.H3" parent="DesignSystem.Text.Default">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
